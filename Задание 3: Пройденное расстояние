#include <iostream>

using namespace std;

int main() {
    // Задание 3: Пройденное расстояние
    double v, t, a, S1;

    cout << "Введите скорость (м/с): ";
    cin >> v;
    cout << "Введите время (с): ";
    cin >> t;
    cout << "Введите ускорение (м/с^2): ";
    cin >> a;

    S1 = v * t + (a * t * t) / 2; // Расстояние

    cout << "Пройденное расстояние: " << S1 << " м" << endl;

    return 0;
}

